<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/button_menu"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="24dp"
    android:gravity="center"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewEnemyAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:src="@android:color/white"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorMain"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewEnemyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:fontFamily="@font/noteworthy_bold"
            android:layout_marginBottom="4dp"
            tools:text="Uncolor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/textViewEnemyPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:fontFamily="@font/noteworthy_bold"
                tools:text="3453"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_coin" />

        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/textViewCurrentRound"
        android:layout_width="wrap_content"
        android:fontFamily="@font/noteworthy_bold"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1 раунд"/>


    <ImageView
        android:layout_width="16dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_back_pic"/>


    


</LinearLayout>