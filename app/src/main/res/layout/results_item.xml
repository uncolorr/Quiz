<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewRoundNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Раунд"
        android:fontFamily="@font/noteworthy_bold"
        android:layout_margin="12dp"
        android:textSize="16sp"
        android:textColor="@color/colorMain"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorMain">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <View
                android:id="@+id/viewMyRound1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/result_right"
                android:layout_marginEnd="4dp"/>

            <View
                android:id="@+id/viewMyRound2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/result_right"
                android:layout_marginEnd="4dp"/>

            <View
                android:id="@+id/viewMyRound3"
                android:layout_width="36dp"
                android:background="@drawable/result_right"
                android:layout_height="36dp" />

            </LinearLayout>


            <Button
                android:id="@+id/buttonPlay"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/noteworthy_bold"
                android:text="Играть"
                android:visibility="invisible"
                android:background="@drawable/result_right"/>

        </FrameLayout>


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <View
            android:id="@+id/viewEnemyRound1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/result_right"/>

        <View
            android:id="@+id/viewEnemyRound2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/result_right"
            android:layout_marginStart="4dp"/>

        <View
            android:id="@+id/viewEnemyRound3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/result_right"
            android:layout_marginEnd="32dp"/>

    </LinearLayout>





</LinearLayout>