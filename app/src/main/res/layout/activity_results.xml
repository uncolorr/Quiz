<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".results_activity.ResultsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutBar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorMain"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Результаты"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            style="@style/TextViewBoldStyle"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/imageButtonUpdate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_update"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewMyAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:color/white"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorMain"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textViewMyUsername"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uncolor"
                android:gravity="center_vertical|start"
                android:textColor="@color/colorMain"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:lines="2"
                android:maxLines="2"
                android:layout_weight="1"
                style="@style/TextViewBoldStyle"/>



            <TextView
                android:id="@+id/textViewEnemyUsername"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Computer"
                android:gravity="center_vertical|end"
                android:textColor="@color/colorMain"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:lines="2"
                android:maxLines="2"
                android:layout_weight="1"
                style="@style/TextViewBoldStyle"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewEnemyAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:src="@android:color/white"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorMain"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ИТОГ"
            style="@style/TextViewBoldStyle"
            android:layout_margin="16dp"
            android:textColor="@color/colorMain"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/colorMain">

        </View>

        <TextView
            android:id="@+id/textViewResultScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 - 0"
            android:layout_margin="16dp"
            android:textSize="48sp"
            android:textColor="@color/colorMain"
            android:layout_gravity="center"
            style="@style/TextViewBoldStyle"/>

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/colorMain"
            android:background="@drawable/button_menu"
            android:fontFamily="@font/noteworthy_bold"
            android:text="Назад"/>

    </LinearLayout>


</ScrollView>